{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/core(|/.*)$": "<rootDir>/../libs/core/src/$1",
    "^@app/core/config(|/.*)$": "<rootDir>/../libs/core/config/src/$1",
    "^@database/database(|/.*)$": "<rootDir>/../libs/database/src/$1",
    "^@events/events(|/.*)$": "<rootDir>/../libs/events/src/$1"
  }
}